<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/observable_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/image_slider_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="78dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="12dp"
                    android:text="Latest"
                    android:textSize="16sp"
                    android:textColor="@color/textHighContrast"
                    android:textAllCaps="false"
                    android:fontFamily="@font/muli_black"
                    android:layout_centerVertical="true"
                    />
                <com.google.android.material.card.MaterialCardView

                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp">
                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="top|end"
                        app:sliderIndicatorMarginTop="16dp"
                        app:sliderIndicatorMarginRight="16dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="2dp"
                        app:sliderIndicatorRadius="1.6dp"
                        app:sliderIndicatorSelectedColor="@color/colorAccent"
                        app:sliderIndicatorUnselectedColor="@color/iconLowColor"
                        app:sliderScrollTimeInSec="4"
                        app:sliderStartAutoCycle="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:padding="24dp">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/featured_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/user_placeholder"
                                app:riv_corner_radius="20dp"
                                app:riv_border_color="@color/colorPrimary"
                                app:riv_border_width="2dp"/>
                            <TextView
                                android:id="@+id/featured_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_above="@id/featured_user"
                                android:fontFamily="@font/playfair_bold"
                                android:text="Lorem Ipsum dolor sit amet"
                                android:textColor="@android:color/white"
                                android:textSize="22sp"
                                android:ellipsize="end"
                                android:maxLines="2"/>
p
                            <TextView
                                android:id="@+id/featured_user"
                                style="@style/TextAppearance.MdcTypographyStyles.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="John Doe"
                                android:textColor="@color/textLowContrast" />
                        </RelativeLayout>

                    </com.smarteist.autoimageslider.SliderView>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>



            <View
                android:id="@+id/slider_overlay"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                 />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="28dp"
               android:layout_below="@id/slider_overlay"
                android:id="@+id/explore_vertical_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
               />
        </RelativeLayout>

    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_wallpaperzone"
                android:tint="@color/colorPrimary"
                android:scaleType="center"
                android:layout_gravity="center"
                />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/loader_layout"
        layout="@layout/loader_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <include layout="@layout/layout_no_connectivity"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
