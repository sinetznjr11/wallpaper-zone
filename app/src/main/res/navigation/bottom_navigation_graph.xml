<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sinetcodes.wallpaperzone.Home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_navigation_home_pop"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/navigation_explore"
        android:name="com.sinetcodes.wallpaperzone.Search.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_navigation_explore_self"
            app:launchSingleTop="true"
            app:popUpTo="@id/navigation_explore"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/navigation_favourites"
        android:name="com.sinetcodes.wallpaperzone.Favourites.FavouritesFragment"
        android:label="FavouritesFragment" >
        <action
            android:id="@+id/action_navigation_favourites_pop"
            app:popUpTo="@id/navigation_favourites"
            app:popUpToInclusive="true"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.sinetcodes.wallpaperzone.Profile.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_navigation_profile_pop"
            app:popUpTo="@id/navigation_profile"
            app:popUpToInclusive="true"
            app:launchSingleTop="true" />
    </fragment>
</navigation>